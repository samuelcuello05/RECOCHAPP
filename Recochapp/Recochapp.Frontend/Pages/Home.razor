@page "/"


<head>
    <link href="/css/app.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body, html {
            height: 100%;
            width: 100%;
        }

        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/images/homeBackground.png');
            background-size: 90%;
            background-position: 100% center;
            background-repeat: no-repeat;
            z-index: -1;
        }

        .main-content {
            width: 100%;
            height: 100vh;
            position: relative;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            z-index: 1;
        }

        .welcome-text {
            color: #DC4920;
            font-family: 'Beautiful Freak Bold', sans-serif; /* Añadí 'sans-serif' como respaldo */
            font-size: 80px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 300px;
            margin-left: 220px;
            padding: 15px 30px;
        }

        .cartoon-character {
            width: 180px;
            height: 180px;
            margin-top: -100px;
            margin-left: -130px;
            margin-bottom: 100px;
        }

        .no-groups-image{
            width: 350%;
            height: 350%;
            object-fit: contain;
            position: relative;
            margin-top: -270px;
            margin-left: -50px;
        }
    </style>
</head>
<body>
    <div class="background">
        <div class="main-content">
            <div class="welcome-text">NOS ENCANTA TENERTE POR AQUÍ</div>

            <div class="cartoon-character">
                <img src="/images/home.png" alt="noGroupsIcon" class="no-groups-image" style="" />
            </div>
        </div>
    </div>
</body>
