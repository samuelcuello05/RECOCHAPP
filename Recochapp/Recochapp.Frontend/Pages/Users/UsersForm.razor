<NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation" />

<style>
    .background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: white;
        background-size: 90%;
        background-position: 100% center;
        background-repeat: no-repeat;
        z-index: -1;
    }

    .crear-grupo-container {
        height: 100vh;
        overflow: hidden;
        padding: 2rem 1rem;
    }

    .titulo {
        width:200px;
    }

    .form-wrapper {
        display: flex;
        justify-content: center;
    }

    .form-box {
        display:flex;
        flex-direction: row;
        background-color: #ffffff;
        border-radius: 1.5rem;
        padding: 0;
        max-width: 1200px;
        height: auto; 
        overflow: visible; 
        width: 100%;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.1);
        position: relative;
        max-height: calc(100vh - 250px); 
        overflow-y: auto; 
        padding: 1rem;
        scrollbar-width: thin;
        scrollbar-color: #DC4920 rgba(220, 73, 32, 0.1);
    }

    .form-content {
        flex: 3; /* 60% */
        padding: 2rem;
        overflow-y: auto;
        max-height: calc(100vh - 200px);
        scrollbar-width: thin;
        scrollbar-color: #DC4920 rgba(220, 73, 32, 0.1);
    }


        .form-box::-webkit-scrollbar {
            width: 8px;
        }

        .form-box::-webkit-scrollbar-track {
            background: rgba(220, 73, 32, 0.1);
            border-radius: 10px;
        }

        .form-box::-webkit-scrollbar-thumb {
            background-color: #DC4920;
            border-radius: 10px;
        }

    .paso-1 {
        font-size: 1.7rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .input-grupo {
        margin-bottom: 2rem;
    }

        .input-grupo label {
            display: block;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .input-grupo input {
            width: 100%;
            border: none;
            border-radius: 0.5rem;
            padding: 0.75rem 1rem;
            background-color: #f3f3f3;
        }

    .paso-2 {
        display: flex;
        align-items: center;
        justify-content: space-between;
        flex-wrap: wrap;
        margin-bottom: 1rem;
    }

    .boton-container {
        display: flex;
        justify-content: flex-end;
        margin-top: 2rem; /* Cambiado a un valor positivo para dar espacio */
        gap: 1rem;
    }

    .login-btn {
        position: absolute;
        top: 70px;
        right: 30px;
        width: 250px;
        background-color: #ff9800;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 15px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .login-btn:hover {
            background-color: #ef8d00;
        }

    .boton-crear {
        background-color: #3b82f6;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 12px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .boton-crear:hover {
            background-color: #2563eb;
            color: white;
        }

    .boton-cancelar {
        background-color: #E94B2B;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 12px;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .boton-cancelar:hover {
            background-color: #cf2e20;
            color: white;
        }

    .image-section {
        flex: 2; /* 40% */
        background-image: url('images/createuserbackground.png');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center;
        min-height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 12px
    }

    .create-image{
        width:300px;
    }

</style>

<div class="background"></div>

<div class="crear-grupo-container">

    <div class="titulo">
        <img src="/images/Group 3020.png" alt="Rechoapp logo" width="450px">
    </div>

    <button class="login-btn" @onclick="LoginAction">Login</button>

    <div class="form-wrapper">
        <div class="form-box">
            <div class="form-content">

                <EditForm EditContext="editContext" OnValidSubmit="OnValidSubmit">
                    <DataAnnotationsValidator />

                    <div class="paso-1">
                        Vamos a armar algo chévere...
                    </div>

                    <div class="input-grupo">
                        <label style="font-weight: bold;">Nombre</label>
                        <InputText class="form-control" placeholder="Ingresa tu nombre" @bind-Value="@User.Name" />
                        <ValidationMessage For="@(() => User.Name)" />
                    </div>

                    <div class="input-grupo">
                        <label style="font-weight: bold;">Apellido</label>
                        <InputText class="form-control" placeholder="Ingresa tu apellido" @bind-Value="@User.Surname" />
                        <ValidationMessage For="@(() => User.Surname)" />
                    </div>

                    <div class="input-grupo">
                        <label style="font-weight: bold;">Número de télefono</label>
                        <InputText class="form-control" placeholder="Ingresa tu télefono" @bind-Value="@User.PhoneNumber" />
                        <ValidationMessage For="@(() => User.PhoneNumber)" />
                    </div>

                    <div class="input-grupo">
                        <label style="font-weight: bold;">Correo electrónico</label>
                        <InputText class="form-control" placeholder="Ingresa tu correo electrónico" @bind-Value="@User.Email" />
                        <ValidationMessage For="@(() => User.Email)" />
                    </div>
                    <div class="input-grupo">
                        <label style="font-weight: bold;">Fecha de nacimiento</label>
                        <InputDate class="form-control" placeholder="Ingresa tu fecha de nacimiento" @bind-Value="@User.DateOfBirth" />
                        <ValidationMessage For="@(() => User.DateOfBirth)" />
                    </div>

                    <div class="boton-container">
                        <button type="submit" class="boton-crear">Crear usuario</button>
                        <a class="boton-cancelar" href="/">Cancelar</a>
                    </div>
                </EditForm>
            </div>

            <div class="image-section">
                <img src="/images/createusericon.png" alt="Girasol bacano" class="create-image" >
            </div>
        </div>
    </div>
</div>
